<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToStudy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white_main_100</item>
        <item name="colorPrimaryVariant">@color/malina_active</item>
        <item name="colorOnPrimary">@color/white_main_100</item>
        <!-- Secondary brand color. -->
        <!--        <item name="colorSecondary">@color/teal_200</item>-->
        <!--        <item name="colorSecondaryVariant">@color/teal_700</item>-->
        <!--        <item name="colorOnSecondary">@color/black</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black_main_87</item>

        <item name="android:windowLightStatusBar">true</item>

        <item name="actionMenuTextColor">@color/malina_active</item>
        <item name="android:actionMenuTextAppearance">@style/ToolbarMenuItem</item>
    </style>

    <style name="BottomMenu" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/malina_active</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white_main_100</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolBarTheme">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:elevation">0dp</item>
        <item name="tint">@color/black_main_87</item>
    </style>

    <style name="ToolbarMenuItem" parent="Body_1">
        <item name="textAllCaps">false</item>
    </style>

    <style name="TabLayout" parent="TextAppearance.Design.Tab">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="fontFamily">@font/montserrat_subrayada</item>
    </style>

    <style name="BottomMenuItemActive">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BottomMenuItemInactive">
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Heading_1">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Heading_2">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Subheading">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Body_1">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Body_2">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Caption">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>